<div class="container">
    <section id="main">
      {{#if articles}}
      
<div class="row">
   {{#each articles}}
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{this.title}}</span>
              <p>{{this.body}}</p>
    
            </div>
            <div class="card-action">
              <a href="#" class="delete" id={{this._id}}>Delete</a>
              <a href="#" onclick="$('#modal1').modal('open');">Comment</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </section>
  </div>
  <br><br>

  <!-- Modal Structure -->
  <div id="modal1" class="modal bottom-sheet">
    <div class="modal-content">
      <h4>Add a Comment</h4>
      <div class="row">
    <form class="col s12" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" data-id={{this._id}}></textarea>
          <label for="textarea1">Enter a Comment</label>
      
        </div>
      </div>
    </form>
  </div>
    </div>
    <a href="/save" class="modal-action modal-close waves-effect waves-green btn-flat right saveComment" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Submit Comment</a>
    <h5>Previous Comments</h5>
    <div id="previousComment" data-target="#previousComment{{this._id}}"></div>
    <a href="/save" class="modal-action modal-close waves-effect waves-green btn-flat right deleteComment">Delete Comment</a>
    <div class="modal-footer">
      
    </div>
  </div>